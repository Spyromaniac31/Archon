<UserControl
    x:Class="Archon.Controls.SaveGameButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="Tooltip" Style="{StaticResource ButtonTooltip}" Text="Save game" TextAlignment="Right" VerticalAlignment="Center" Visibility="Collapsed"/>
        <Button x:Name="SaveButton" Background="Transparent" Click="{x:Bind Clicked}" PointerEntered="Button_PointerEntered" PointerExited="Button_PointerExited" Margin="12">
            <Button.Content>
                <FontIcon FontSize="40" FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xEB4A;"/>
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
