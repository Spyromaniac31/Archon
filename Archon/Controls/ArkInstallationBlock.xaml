                <FontIcon
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="16"
                    Glyph="&#xE91C;" />
                <TextBlock Text="Update ARK" />
            </StackPanel>
        </Button>
        <Button
            x:Name="VerifyButton"
            Grid.Column="1"
            Margin="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Command="{Binding VerifyInstallCommand}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="16"
                    Glyph="&#xE9A2;" />
                <TextBlock Text="Verify game files" />
            </StackPanel>
        </Button>-->
        <Rectangle
            x:Name="StatusBackground"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Height="50"
            HorizontalAlignment="Stretch"
            Fill="Green" />
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="8">
            <FontIcon
                x:Name="StatusIcon"
                VerticalAlignment="Center"
                FontFamily="{StaticResource FluentUIGlyphs}"
                FontSize="24"
                Foreground="White"
                Glyph="&#xE9A1;" />
            <TextBlock
                x:Name="StatusText"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="White"
                Text="ARK is up to date" />
        </StackPanel>

